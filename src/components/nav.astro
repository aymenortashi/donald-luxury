<nav class="fixed w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="text-2xl font-serif text-gray-900 tracking-wide hover:text-amber-500 transition-colors duration-300">
          Donald
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex md:space-x-10 md:items-center">
        <a href="/" class="group relative text-gray-700 hover:text-amber-500 transition-colors duration-300 font-medium">
          Le portail
          <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-amber-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/contact" class="group relative text-gray-700 hover:text-amber-500 transition-colors duration-300 font-medium">
          Porte fermée
          <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-amber-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/mode" class="group relative text-gray-700 hover:text-amber-500 transition-colors duration-300 font-medium">
          Mode
          <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-amber-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </div>


      <div class="flex items-center md:hidden">
        <button 
          id="mobile-menu-button"
          class="text-gray-700 hover:text-amber-500 transition-colors duration-300 focus:outline-none"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pt-4 pb-3 space-y-2 bg-white/80 backdrop-blur-md shadow-inner rounded-b-lg">
    <a href="/" class="mobile-link opacity-0 block text-gray-900 hover:text-amber-500 px-3 py-2 rounded font-medium">Le portail</a>
    <a href="/contact" class="mobile-link opacity-0 block text-gray-900 hover:text-amber-500 px-3 py-2 rounded font-medium">Porte fermée</a>
    <a href="/aboutus" class="mobile-link opacity-0 block text-gray-900 hover:text-amber-500 px-3 py-2 rounded font-medium">Mon univers</a>
  </div>

  <script>
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        if (mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.remove('hidden');
          void mobileMenu.offsetWidth;
          mobileMenu.classList.remove('animate-fadeOut');
          mobileMenu.classList.add('animate-fadeIn');

          mobileLinks.forEach((link, i) => {
            setTimeout(() => {
              link.classList.remove('opacity-0');
              (link as HTMLElement).style.animation = 'fadeIn 0.3s ease forwards';
            }, i * 100);
          });
        } else {
          mobileLinks.forEach((link, i) => {
            setTimeout(() => {
              (link as HTMLElement).style.animation = 'fadeOut 0.2s ease forwards';
            }, i * 50);
          });

          setTimeout(() => {
            mobileMenu.classList.remove('animate-fadeIn');
            mobileMenu.classList.add('animate-fadeOut');
            setTimeout(() => mobileMenu.classList.add('hidden'), 300);
          }, 200);
        }
      });
    }
  </script>
</nav>

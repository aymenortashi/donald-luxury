<div id="preloader" class="fixed inset-0 flex flex-col justify-center items-center bg-white z-[9999]">
  <h1 class="text-4xl md:text-6xl font-serif text-gray-900 tracking-wide animate-pulse">Donald</h1>
  <p class="text-lg md:text-2xl text-gray-500 mt-2 animate-fade-in">Élégance | Dicipline | Luxure</p>
</div>

<style>
  @keyframes fadeOut {
    0% { opacity: 1; }
    100% { opacity: 0; visibility: hidden; }
  }

  .fade-out {
    animation: fadeOut 1s forwards;
  }

  @keyframes fadeIn {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease forwards;
  }
</style>

<script>
  window.addEventListener('load', () => {
    const preloader = document.getElementById('preloader');
    // Keep preloader visible for 2.5 seconds after load
    setTimeout(() => {
      if (preloader) {
        preloader.classList.add('fade-out');
        setTimeout(() => {
          preloader.style.display = 'none';
        }, 1000); // matches fadeOut duration
      }
    }, 2500); 
  });
</script>

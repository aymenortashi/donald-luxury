---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- FULL-SCREEN OVERLAY -->
  <div id="page-intro-overlay"></div>

  <main id="page-content" class="intro-zoom">
    <section class="max-w-5xl mx-auto py-32 text-center">
      <h1 class="text-5xl md:text-6xl font-serif text-gray-900 mb-4">
        A Grand Arrival
      </h1>
      <p class="text-gray-600 text-lg">
        The entire page emerges from darkness with a subtle cinematic zoom.
      </p>
    </section>
  </main>

  <style>
    /* --- OVERLAY: initial full black screen --- */
 #page-intro-overlay {
  position: fixed;
  inset: 0;
  background: #000;
  z-index: 9999;
  animation: overlayFade 1.4s ease forwards;
  pointer-events: none;   /* ðŸ‘ˆ allows clicks to pass through */
}

    @keyframes overlayFade {
      0% { opacity: 1; }
      100% { opacity: 0; }
    }

    /* --- PAGE ZOOM EFFECT --- */
    .intro-zoom {
      transform: scale(1.08);
      opacity: 0.95;
      animation: pageZoom 2s ease forwards;
      animation-delay: 0.3s; /* wait a bit so overlay starts fading */
    }

    @keyframes pageZoom {
      to {
        transform: scale(1);
        opacity: 1;
      }
    }
  </style>
</Layout>
